<p id="notice"><%= notice %></p>

<h1>Coffe Shops</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coffe_shops.each do |coffe_shop| %>
      <tr>
        <td><%= coffe_shop.name %></td>
        <td><%= coffe_shop.description %></td>
        <td><%= coffe_shop.latitude %></td>
        <td><%= coffe_shop.longitude %></td>
        <td><%= link_to 'Show', coffe_shop %></td>
        <td><%= link_to 'Edit', edit_coffe_shop_path(coffe_shop) %></td>
        <td><%= link_to 'Destroy', coffe_shop, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

